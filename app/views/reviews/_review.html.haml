.panel.panel-info
  .panel-heading
    - if @display_product
      %em= link_to review.product.title, category_product_path(review.product.category, review.product)
    -else
      %em= link_to review.author, review.user
  .panel-body
    .row
      .col-sm-1
        .text-center
          %h4
            - if review.rating === 1
              .label.label-danger
                = review.rating
            - else
              - if review.rating == 5
                .label.label-success
                  = review.rating
              - else
                .label.label-warning
                  = review.rating
      .col-sm-11
        = review.content
  .panel-footer
    Created at:
    = review.created_at.strftime('%d-%m-%y')

