%h1 Listing categories

%table.table{:class => 'table-hover'}
  %thead
    %tr
      %th Name
      %th
      %th
      %th
  %tbody
    - categories.each do |category|
      %tr
        %td= category.name
        %td
          .text-center
            %a{:href => category_path(category), :class => 'btn btn-default'}
              Show&nbsp
              %span{:class => 'glyphicon glyphicon-search'}
        -if current_user && current_user.admin?
          %td
            .text-center
              %a{:href => edit_category_path(category), :class => 'btn btn-default'}
                Edit&nbsp
                %span{:class => 'glyphicon glyphicon-edit'}
          %td
            .text-center
              %a{:href => category_path(category), :class => 'btn btn-default',  :data => {:method => :delete, :confirm => 'Are you sure?' }}
                Destroy&nbsp
                %span{:class => 'glyphicon glyphicon-trash'}

- if current_user && current_user.admin
  .text-center
    %a{:href => new_category_path, :class => 'btn btn-primary'}
      New category&nbsp
      %span{:class => 'glyphicon glyphicon-new-window'}
